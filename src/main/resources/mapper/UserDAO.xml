<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.textin.dal.dao.UserDAO">

    <resultMap id="resultMap" type="org.textin.dal.dataobject.UserDO">
        <id column="id" property="id"/>
        <id column="is_delete" property="isDelete"/>
        <id column="create_at" property="createAt"/>
        <id column="update_at" property="updateAt"/>

        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="status" property="status"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
    </resultMap>
    <sql id="allColumn">id, is_deleted, create_at, update_at,username,password,status,gender,phone,email</sql>
    <sql id="tableName">users</sql>

    <sql id="where_clause_do" >
        <trim prefix="where" prefixOverrides="and|or" >
            is_delete = 0
            <if test="status != null">
                and status = #{status}
            </if>
        </trim>
    </sql>
    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id" parameterType="org.textin.dal.dataobject.UserDO">
        insert into <include refid="tableName"/>
        (create_at,username,password,gender,email)
        values
        (
        #{createAt},
        #{username},
        #{password},
        #{gender},
        #{email}
        )
    </insert>

    <select id="findById" resultMap="resultMap" resultType="org.textin.dal.dataobject.UserDO">
        SELECT <include refid="allColumn"/>
        FROM <include refid="tableName"/>
        where id = #{id}
    </select>

    <select id="findUserByEmail" resultMap="resultMap" resultType="org.textin.dal.dataobject.UserDO">
        SELECT <include refid="allColumn"/>
        FROM <include refid="tableName"/>
        where email = #{email}
    </select>

</mapper>